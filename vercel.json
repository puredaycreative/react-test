{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/wsgi.py"
    },
    {
      "source": "/static/(.*)",
      "destination": "frontend/build/static/$1"
    },
    {
      "source": "/admin",
      "destination": "frontend/build/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/build/index.html"
    }
  ]
}